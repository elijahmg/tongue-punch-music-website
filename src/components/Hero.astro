---
import logo from "../assets/logo_fixed.png";
import band from "../assets/band.JPG";
---

<section
    id="hero"
    class="relative h-screen flex flex-col items-center justify-center overflow-hidden"
>
    <!-- Background Image with Parallax-ready feel -->
    <div class="absolute inset-0 z-0">
        <img
            src={band.src}
            alt="Tongue Punch Band"
            class="w-full h-full object-cover filter brightness-50 contrast-125"
        />
        <div
            class="absolute inset-0 bg-linear-to-t from-brand-black via-transparent to-brand-black/50"
        >
        </div>
    </div>

    <!-- Content -->
    <div
        class="relative z-10 flex flex-col items-center justify-center w-full px-4 text-center"
    >
        <div class="mb-8 overflow-hidden">
            <img
                src={logo.src}
                alt="logo"
                class="w-full max-w-(--breakpoint-md) mx-auto animate-reveal-up"
            />
        </div>

        <div
            class="flex flex-col md:flex-row gap-4 md:gap-8 items-center animate-fade-in delay-500 opacity-0"
        >
            <span
                class="text-brand-accent font-display text-xl md:text-2xl tracking-[0.3em]"
                >EST. 2024</span
            >
            <span class="hidden md:block w-2 h-2 bg-brand-white rotate-45"
            ></span>
            <span
                class="text-brand-white font-display text-xl md:text-2xl tracking-[0.3em]"
                >ALT ROCK FROM PRAGUE</span
            >
        </div>
    </div>

